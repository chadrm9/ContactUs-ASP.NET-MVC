<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Example Site", "ContactUs", "Home", new { area = "" }, new { @class = "navbar-brand bg-primary" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right text-uppercase">
                    <li>@Html.ActionLink("How It Works", "HowItWorks", "Home")</li>
                    <li>@Html.ActionLink("In The News", "InTheNews", "Home")</li>
                    <li>@Html.ActionLink("Our Locations", "OurLocations", "Home")</li>
                    <li>@Html.ActionLink("FAQ", "FAQ", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "ContactUs", "Home")</li>

                    <li>
                        <div class="social-links text-center">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                        </div>
                    </li>
                    <li>
                        <div class="social-links">
                            <button class="btn btn-primary bg-primary"><i class="fa fa-phone"></i>
                                <span>555 - 555 - 5555</span>
                            </button>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <footer>
            <div class="navbar navbar-inverse">
                <div class="container-fluid text-center">
                    <ul class="nav navbar-nav text-uppercase">
                        <li>@Html.ActionLink("About Us", "AboutUs", "Home")</li>
                        <li>@Html.ActionLink("How It Works", "HowItWorks", "Home")</li>
                        <li>@Html.ActionLink("In The News", "InTheNews", "Home")</li>
                        <li>@Html.ActionLink("Our Locations", "OurLocations", "Home")</li>
                        <li>@Html.ActionLink("FAQ", "FAQ", "Home")</li>
                        <li>@Html.ActionLink("Contact Us", "ContactUs", "Home")</li>
                        </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("\u00A9Example Site " + @DateTime.Now.Year, "ContactUs", "Home")</li>
                        <li>@Html.ActionLink("Privacy Statement", "PrivacyStatement", "Home")</li>
                        <li>@Html.ActionLink("Terms Of Service", "TermsOfService", "Home")</li>
                    </ul>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
